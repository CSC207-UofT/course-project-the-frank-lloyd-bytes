<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"


        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="566dp"
            android:layout_marginTop="2dp"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/top_panel"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="150dp">
            <Button
                    android:layout_width="361dp"
                    android:layout_height="49dp"
                    android:id="@+id/start_assessment"
                    android:text="Start health screening questionnaire"
                    app:backgroundTint="@color/UofTblue"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="394dp"
                    app:layout_constraintTop_toBottomOf="@+id/ucheck_logo" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"/>
            <ImageView
                    android:src="@drawable/ucheck_logo"
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:id="@+id/ucheck_logo" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/dashboardbutton"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="1dp"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.014"/>
            <ImageButton
                    android:src="@drawable/ic_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backToDashboard"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <LinearLayout

                    android:layout_width="412dp"
                                                         android:layout_height="470dp"
                                                         android:layout_centerHorizontal="true"
                                                         android:id="@+id/linearLayout"
                                                         tools:layout_editor_absoluteX="0dp"
                                                         app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>