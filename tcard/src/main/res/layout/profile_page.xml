<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                tools:context="activities.ProfileActivity"
                android:background="@color/white">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:padding="15dp"
                        android:background="@drawable/text_box_type_3">>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:src="@drawable/ic_profile"
                        android:layout_width="40dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:id="@+id/profilePic"
                        android:layout_weight="1"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="250dp"
                        android:layout_height="match_parent">
                    <TextView
                            android:text="Text View"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/legalNames"
                            android:layout_weight="1"/>
                    <TextView
                            android:text="TextView"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/profileUtorID"
                            android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_box"
                android:hint="TCard Number"
        >

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:id="@+id/profileNumber"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:text="numero"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_box"
                android:hint="Email"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
        >

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:id="@+id/profileEmail"
                    android:textColor="@color/black"
                    android:background="@color/transparent"
                    android:text="email"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_box"
                android:hint="Status"
        >

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/profileStatus"
                    android:background="@color/transparent"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:text="Status"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_box"
                android:hint="Department"
        >

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:id="@+id/profileDepartment"
                    android:textColor="@color/black"
                    android:background="@color/transparent"
                    android:text="Department"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_box"
                android:hint="Year"
        >

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/profileYear"
                    android:background="@color/transparent"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:text="Year"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content">
                <Button
                        android:text="Change Password"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_box_type_3"
                        android:id="@+id/profileChangePassword"/>
                <Button
                        android:text="Upload Picture"
                        android:layout_width="180dp"

                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_box_type_3"
                        android:id="@+id/profileChangePicture"/>
            </LinearLayout>
            <Button
                    app:icon="@drawable/ic_home"
                    android:layout_width="60dp"
                    android:layout_gravity="center"
                    android:paddingLeft="18dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:background="@drawable/circle"
                    android:id="@+id/profileGoBack"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>